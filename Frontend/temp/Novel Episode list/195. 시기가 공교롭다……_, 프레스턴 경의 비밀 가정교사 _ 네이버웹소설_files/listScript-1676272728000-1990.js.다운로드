jQuery(function(){initStoryButton();});function initStoryButton(){var b=document.querySelector(".info_bottom .summary");var a=document.querySelector("#summaryText");if(a.offsetHeight>b.offsetHeight){jQuery("#summaryMoreButton").show();}}function toggleSummaryPopup(a){a.preventDefault();if(jQuery(".ly_summary_full").hasClass("on")){clickcr(a,"inf.sumext","","");}else{clickcr(a,"inf.sumcls","","");}jQuery(document.body).toggleClass("fixed");jQuery(".ly_dim").toggleClass("on");jQuery(".ly_summary_full").toggleClass("on");}var anotherList=jQuery(".section_area_info .another_lst");if(anotherList.length>0){jQuery("#select_author").click(function(a){a.preventDefault();anotherList.toggleClass("on");});jQuery(document).click(function(a){closeAnotherListBox(a);});jQuery(document).keyup(function(a){closeAnotherListBox(a);});function closeAnotherListBox(a){if(!jQuery(a.target).hasClass("link type1")&&!jQuery(a.target).hasClass("another_lst")&&!jQuery(a.target).closest("ul").hasClass("another_lst")){anotherList.removeClass("on");}}}